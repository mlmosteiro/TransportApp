<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarButton">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorLightPrimary</item>
    </style>

    <style name="Divisor">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="Labels" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="PriceDetail" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Fields" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="EmptyFields">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Icon">
        <item name="android:color">@color/colorAccent</item>
    </style>

    <style name="Description">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="ListItemTitle" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>

    <style name="ListItemDescription">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>


    <style name="ListItemFields" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    
    <style name="ListItemPrice" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
